<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Run"
        android:id="@+id/enterRun_title"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run Date"
        android:id="@+id/enterRun_date"
        android:layout_marginTop="47dp"
        android:textSize="20dp"
        android:layout_below="@+id/enterRun_title"
        android:layout_alignRight="@+id/enterRun_duration" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Distance"
        android:id="@+id/enterRun_distance"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:layout_below="@+id/enterRun_date"
        android:layout_alignRight="@+id/enterRun_duration" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Duration"
        android:id="@+id/enterRun_duration"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/enterRun_distance"
        android:textSize="20dp"
        android:layout_alignRight="@+id/enterRun_equipUsed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipment Used"
        android:id="@+id/enterRun_equipUsed"
        android:layout_marginTop="29dp"
        android:textSize="20dp"
        android:layout_marginLeft="28dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/enterRun_duration" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Run"
        android:id="@+id/enterRun_button_submit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:clickable="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/enterRun_date_val"
        android:layout_above="@+id/enterRun_distance"
        android:layout_toRightOf="@+id/enterRun_button_submit"
        android:hint="Enter date"
        android:layout_marginBottom="-2dp"
        android:gravity="center_horizontal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/enterRun_distance_val"
        android:layout_above="@+id/enterRun_duration"
        android:layout_alignLeft="@+id/enterRun_date_val"
        android:hint="Enter distance"
        android:layout_marginBottom="-2dp"
        android:gravity="center_horizontal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/enterRun_duration_val"
        android:layout_alignBottom="@+id/enterRun_duration"
        android:layout_alignLeft="@+id/enterRun_distance_val"
        android:hint="Enter time"
        android:layout_marginBottom="-2dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="___________________________________________________________"
        android:id="@+id/textView6"
        android:textColor="#7d7d7d"
        android:layout_below="@+id/enterRun_title"
        android:layout_alignParentLeft="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterRun_equipUsed_spinner"
        android:layout_alignTop="@+id/enterRun_equipUsed"
        android:layout_toRightOf="@+id/enterRun_title" />

</RelativeLayout>