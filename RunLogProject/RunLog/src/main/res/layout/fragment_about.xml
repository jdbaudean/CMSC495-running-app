<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d6e8ff"
    android:clickable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:id="@+id/about_title"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RunLog\n"
        android:id="@+id/about_version_heading"
        android:autoText="false"
        android:gravity="center_horizontal"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        android:textColor="#287fd2"
        android:paddingTop="-5dp"
        android:layout_below="@+id/about_separator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JD Baudean\nRyan Beck\nJosh Ronk\nTim Roudebush\nTaylor Thomas\nKatie Wolfe"
        android:id="@+id/about_developed_by"
        android:gravity="center_horizontal"
        android:textSize="16dp"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/about_developed_for_heading"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Professor Nick Duchon\nCMSC495\nFall 2013 "
        android:id="@+id/about_developed_for"
        android:gravity="center_horizontal"
        android:textSize="16dp"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="___________________________________________________________"
        android:id="@+id/about_separator"
        android:textColor="#4e4e4e"
        android:layout_below="@+id/about_title"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed By:"
        android:id="@+id/about_developed_by_heading"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_above="@+id/about_developed_by"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed For:"
        android:id="@+id/about_developed_for_heading"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_above="@+id/about_developed_for"
        android:layout_alignLeft="@+id/about_version_heading" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.1"
        android:id="@+id/about_version"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/about_version_heading"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />
</RelativeLayout>